{% if node.field_sidebar.0.value %}
    {% set sidebar = node.field_sidebar.0.value%}
{% else %}
    {% set sidebar = blog_sidebar %}
{% endif %}

{% if sidebar == ''%}
{% set sidebar = 'right'%}
{% endif %}
{% include theme_path ~ "/templates/header.html.twig" %}

{% include theme_path ~ "/templates/page-title.html.twig" %}  

    <section class="section-lg m-top8">
            <div class="container">
                <div class="row">
                {% if sidebar == 'right'%}
                   {% if page.content %}
                        <div class="col-md-9">
                            {{ page.content }}
                        </div>
                    {% endif %}
                      
                    {% if page.sidebar %}
                        <div class="col-md-3 col-xs-12">
                           
                                {{ page.sidebar}}
                         
                        </div>
                    {% endif%}
                {% else %}
                      {% if page.sidebar %}
                        <div class="col-md-3 col-xs-12">
                                {{ page.sidebar}}
                           </div>
                    {% endif%}
                    
                    {% if page.content %}
                        <div class="col-md-9">
                            {{ page.content }}
                        </div>
                    {% endif %}
                {% endif %}
              </div>
            </div>
        </section>


{% if page.section %}
    {{ page.section }}
{% endif %}

{% include theme_path ~ "/templates/footer.html.twig" %}
